<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Temperature Converter</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
        }
        #container {
            margin-top: 50px;
        }
        #result {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <h1>Temperature Converter</h1>
    <div id="container">
        <label for="celsius">Enter Temperature in Celsius:</label>
        <input type="number" id="celsius">
        <button onclick="convertCelsiusToFahrenheit()">Convert to Fahrenheit</button>
        <button onclick="convertFahrenheitToCelsius()">Convert to Celsius</button>
        <p id="result"></p>
    </div>

    <script>
        function convertCelsiusToFahrenheit() {
            const celsiusInput = document.getElementById("celsius").value;
            const fahrenheitResult = (celsiusInput * 9/5) + 32;
            document.getElementById("result").innerHTML = `${celsiusInput}째C is equal to ${fahrenheitResult.toFixed(2)}째F`;
        }

        function convertFahrenheitToCelsius() {
            const fahrenheitInput = document.getElementById("celsius").value;
            const celsiusResult = (fahrenheitInput - 32) * 5/9;
            document.getElementById("result").innerHTML = `${fahrenheitInput}째F is equal to ${celsiusResult.toFixed(2)}째C`;
        }
    </script>
</body>
</html>
